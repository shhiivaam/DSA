#include<bits/stdc++.h>
using namespace std;
int n;
int arr[1001];
int dp[10001][1001];
int rec(int l,int r){
  //pruning

  //base case
  if(l+1 == r){
  	return 0;
  }
  //cache check
 if(dp[l][r] != -1) return dp[l][r];
 //Transition
 int ans =1e9;
 for(int p =l+1;p<=r-1;p++){
   ans = min(ans,arr[r]-arr[l] + rec(l,p) + rec(p,r));
 }
  //save and return	
   return dp[l][r] = ans; 
}
void solve(){
  cin>>n;
  for(int i=1;i<=n;i++) cin>>arr[i];
  arr[0]=0;
  memset(dp,-1,sizeof(dp));	
  cout<<rec(0,n);	
}
int main(){
  int t;
  cin>>t;
  while(t--) solve();
}
