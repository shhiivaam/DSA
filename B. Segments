#include <iostream>
#include <vector>
using namespace std;
void solve(){
    int n; cin>>n;
    if(n==1){
        cout<<"1"<<endl;
        return;
    }else if(n == 2){
        cout<<"2"<<endl;
        return;
    }else if(n==3){
        cout<<"4"<<endl;
        return;
    }else if (n==4){
        cout<<"6"<<endl;   
    }else {
        cout<<n*5<<endl;
    }
    
}
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
 
    int t=1;
    //cin >> t;
    while (t--) {
            solve();
    }
}
