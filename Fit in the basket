#include<bits/stdc++.h>
using namespace std;
bool check(int cur, int n,vector<int>&v,vector<int>&w){
	int last = 0;
	for(int i=0;i<n;i++){
		if(v[i] < w[i]) last++;
	}
	return last <= cur;
}
void Sol(){
   int n,k;
   cin>>n>>k;
   vector<int>v(n),w(n);
   for(int i=0;i<n;i++) cin>>v[i];
   for(int i=0;i<n;i++) cin>>w[i];
   sort(v.begin(),v.end());
   sort(w.begin(),w.end());
   int ans = n;
   int lo =0; int hi = n;
   while(lo<=hi){
   	 int mid = lo+(hi-lo)/2;
   	  if(check(mid,n,v,w)){
   	  	ans = min(ans,mid);
   	  	hi = mid-1;
   	  }else{
   	  	 lo = mid+1;
   	  }
   } 
  cout<<ans<<endl;
}
int main(){
	int t;
	cin>>t;
	while(t--) Sol();
}
