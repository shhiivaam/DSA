class Solution {
public:
    int lengthOfLIS(vector<int>& nums) {
        vector<int> sub;
        for (int x : nums) {
            auto it = lower_bound(sub.begin(), sub.end(), x);
            if (it == sub.end()) {
                sub.push_back(x); 
            } else {
                *it = x;
            }
        }
        return sub.size();
    }
};
